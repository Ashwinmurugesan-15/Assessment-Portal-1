{
  "name": "assessment-engine",
  "description": "AI-Powered Assessment Engine with PostgreSQL/YugabyteDB support",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start -p ${PORT:-3000}",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint",
    "prebuild": "npm run validate",
    "seed": "tsx lib/seed.ts",
    "db:init": "tsx lib/db-init.ts",
    "db:migrate": "tsx lib/migrate-data.ts",
    "db:verify": "tsx lib/verify-migration.ts",
    "prod:build": "npm run validate && npm run build",
    "prod:start": "NODE_ENV=production npm start",
    "docker:build": "docker build -t assessment-engine .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production assessment-engine",
    "docker:compose": "docker-compose up -d",
    "health": "curl -f http://localhost:3000/api/health || echo 'Server not responding'",
    "analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next node_modules/.cache"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.469.0",
    "next": "15.1.3",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.11",
    "papaparse": "^5.4.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.0.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.4",
    "@types/papaparse": "^5.3.15",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.19.2",
    "typescript": "^5"
  }
}